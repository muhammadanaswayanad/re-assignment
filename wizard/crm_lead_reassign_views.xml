<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_reassign_form" model="ir.ui.view">
        <field name="name">crm.lead.reassign.wizard.form</field>
        <field name="model">crm.lead.reassign.wizard</field>
        <field name="arch" type="xml">
            <form string="Reassign Lead">
                <group>
                    <field name="lead_id" readonly="1"/>
                    <field name="user_id" options="{'no_create': True, 'no_open': True}"/>
                </group>
                <footer>
                    <button name="action_reassign" string="Reassign" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_crm_lead_reassign" model="ir.actions.act_window">
        <field name="name">Reassign Lead</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead.reassign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
</odoo>
