<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_reassign" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.reassign</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_schedule_meeting']" position="after">
                <button name="%(re-assignment.action_crm_lead_reassign)d" 
                        type="action" 
                        string="Re-Assign" 
                        groups="sales_team.group_sale_salesman" 
                        attrs="{'invisible': [('user_id', '!=', uid)]}"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
